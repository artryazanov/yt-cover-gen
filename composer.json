{
    "name": "artryazanov/yt-cover-gen",
    "description": "A PHP package to generate YouTube thumbnails from screenshots using AI.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Artem Ryazanov",
            "email": "artryazanov@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-gd": "*",
        "ext-json": "*",
        "openai-php/client": "^0.10 || ^0.15",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0 || ^10.0",
        "pestphp/pest": "^2.0 || ^3.0",
        "larastan/larastan": "^3.9",
        "laravel/pint": "^1.27"
    },
    "autoload": {
        "psr-4": {
            "Artryazanov\\YtCoverGen\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Artryazanov\\YtCoverGen\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Artryazanov\\YtCoverGen\\Integrations\\Laravel\\YtCoverGenServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "./vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "pestphp/pest-plugin": true
        }
    }
}
